<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 >

    <LinearLayout
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/linearlayout_top"
        android:orientation="horizontal"
        >

            <ImageView
                android:id="@+id/camera_test_back"
                android:clickable="true"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="bottom"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/camera_ripple_back"
                android:src="@drawable/camera_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <ImageView
                android:visibility="gone"
                android:layout_marginRight="15dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/camera_auto"/>

            <ImageView
                android:visibility="gone"
                android:layout_marginRight="15dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/camera_hd"/>

            <ImageView
                android:visibility="gone"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="bottom"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/camera_more"/>

    </LinearLayout>

    <com.tyky.imagecrop.camera.JTCameraView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/jtcameraview"
        app:layout_constraintTop_toBottomOf="@id/linearlayout_top"
        app:layout_constraintBottom_toTopOf="@+id/linearlayout_bottom"
        />

    <com.tyky.imagecrop.camera.CoverView
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/linearlayout_top"
        app:layout_constraintBottom_toTopOf="@+id/linearlayout_bottom"
        />

    <LinearLayout
        android:id="@+id/linearlayout_bottom"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        >

           <RelativeLayout
               android:id="@+id/tablelayout"
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:background="#000000">

               <TextView
                   android:layout_centerInParent="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="16sp"
                   android:textColor="#46D3C3"
                   android:text="单张拍摄"/>

           </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                >

                <ImageView
                    android:id="@+id/camera_getpicture"
                    android:clickable="true"
                    android:background="@drawable/camera_ripple_back"
                    android:layout_weight="1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/camera_insert"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                >

                <ImageView
                    android:clickable="true"
                    android:layout_weight="1"
                    android:background="@drawable/camera_ripple"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/camera_takephotoshape"
                    android:id="@+id/takepicture"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>

            <ImageView
                android:visibility="invisible"
                android:layout_weight="1"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/camera_insert"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>